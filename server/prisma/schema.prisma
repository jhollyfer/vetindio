generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRoleEnum {
  MASTER
  COMPANY
  CLIENT
}

model User {
  id        String       @id @default(uuid())
  name      String
  email     String       @unique
  password  String
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")
  role      UserRoleEnum @default(COMPANY)

  @@map("users")
}

enum CategoryStatusEnum {
  ACTIVE
  INACTIVE
}

model Category {
  id          String             @id @default(uuid())
  name        String
  slug        String             @unique
  description String?
  status      CategoryStatusEnum @default(ACTIVE)
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @updatedAt @map("updated_at")

  @@map("categories")
}
