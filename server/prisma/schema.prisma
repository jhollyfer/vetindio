generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRoleEnum {
  MASTER
  ADMINISTRATOR
  CUSTOMER
}

model User {
  id        String       @id @default(uuid())
  name      String
  email     String       @unique
  password  String
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")
  role      UserRoleEnum @default(CUSTOMER)
  trashed   Boolean      @default(false)
  trashedAt DateTime?    @map("trashed_at")

  @@map("users")
}

enum CategoryStatusEnum {
  ACTIVE
  INACTIVE
}

model Category {
  id          String             @id @default(uuid())
  name        String
  slug        String             @unique
  description String?
  status      CategoryStatusEnum @default(ACTIVE)
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @updatedAt @map("updated_at")
  trashed     Boolean            @default(false)
  trashedAt   DateTime?          @map("trashed_at")

  @@map("categories")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  price       Int
  stock       Int
  sku         String    @unique
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  trashed     Boolean   @default(false)
  trashedAt   DateTime? @map("trashed_at")

  @@map("products")
}
